{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      &copy; Copyright {{ site.time | date: '%Y' }}
      {{ site.first_name }}
      {{ site.middle_name }}
      {{ site.last_name }}. {{ site.footer_text }}
      {% if site.impressum_path %}
        <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
      {% endif %}
      {% if site.last_updated %}
        Last updated: {{ 'now' | date: '%B %d, %Y' }}.
      {% endif %}
      {% if site.goatcounter_id %}
        <span class="ml-1">
          <a href="https://{{ site.goatcounter_id }}.goatcounter.com" target="_blank">
            <i class="fas fa-chart-bar"></i> Visit Stats
          </a>
        </span>
      {% endif %}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}

    <div class="container">
      <div class="row">
        <div class="col-md-8">
          &copy; Copyright {{ site.time | date: '%Y' }}
          {{ site.first_name }}
          {{ site.middle_name }}
          {{ site.last_name }}. {{ site.footer_text }}
          {% if site.impressum_path %}
            <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
          {% endif %}
          {% if site.last_updated %}
            Last updated: {{ 'now' | date: '%B %d, %Y' }}.
          {% endif %}
        </div>
        <div class="col-md-4 text-right">
          <div class="footer-links">
            <a href="https://orcid.org/0000-0003-4760-5483" target="_blank" title="ORCID">
              <i class="ai ai-orcid"></i>
            </a>
            <a href="https://scholar.google.com/citations?user=YOUR_ID" target="_blank" title="Google Scholar">
              <i class="ai ai-google-scholar"></i>
            </a>
            <a href="https://github.com/longfuxu" target="_blank" title="GitHub">
              <i class="fab fa-github"></i>
            </a>
            <a href="https://linkedin.com/in/longfu-xu" target="_blank" title="LinkedIn">
              <i class="fab fa-linkedin"></i>
            </a>
            <a href="mailto:longfu.xu@berkeley.edu" title="Email">
              <i class="fas fa-envelope"></i>
            </a>
            <a href="/feed.xml" title="RSS Feed">
              <i class="fas fa-rss"></i>
            </a>
            {% if site.goatcounter_id %}
              <a href="https://{{ site.goatcounter_id }}.goatcounter.com" target="_blank" title="Visit Stats">
                <i class="fas fa-chart-bar"></i>
              </a>
            {% endif %}
          </div>
          <div class="mt-2">
            <a href="/privacy/" class="small text-muted">Privacy</a> | 
            <a href="/sitemap.xml" class="small text-muted">Sitemap</a>
          </div>
        </div>
      </div>
    </div>
  </footer>
{% endif %}
